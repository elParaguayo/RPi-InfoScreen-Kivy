<FinlandArrivalsScreen>
    FloatLayout:
        id: lbus_float

        BoxLayout:
            id: lbus_base_box
            Label:
                id: weather_lbl_load
                text: "Loading weather..."

        ScreenManager:
            id: lbus_scrmgr
            auto_bring_to_front: False

        HiddenButton:
            size: root.width, 50
            size_hint: None, None
            pos: 0, root.height - 50
            on_press: root.next_screen()

        HiddenButton:
            size: root.width, 50
            size_hint: None, None
            pos: 0, 0
            on_press: root.next_screen(False)

<FinlandArrivalsStop>
    BoxLayout:
        orientation: "vertical"
        spacing: 10

        Label:
            size_hint_y: 0.2
            text: root.description

        # BoxLayout:
        #     orientation: "vertical"
        #     size_hint_y: 0.2
        #
        #     Label:
        #         text: "Filter"
        #         halign: "left"
        #         size_hint_y: 0.4

        BoxLayout:
            orientation: "horizontal"
            id: bx_filter
            padding: 50,0
            size_hint_y: 0.15

        BoxLayout:
            id: bx_buses
            orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            height: 40
            size_hint_y: None

            Label:
                padding_x: 5
                halign: "left"
                font_size: 10
                text: "Data provided by HSL"
                size_hint_x: 0.5

            Label:
                padding_x: 5
                halign: "right"
                font_size: 10
                text: ""
                size_hint_x: 0.5


<FinlandArrivals>
    orientation: "horizontal"
    height: 30
    size_hint_y: None

    Label:
        text: root.bus_route
    Label:
        text: root.bus_destination
    Label:
        text: root.bus_time
    Label:
        text: root.bus_alert

