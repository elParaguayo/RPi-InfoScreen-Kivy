<FinlandArrivalsScreen>
    FloatLayout:
        id: lbus_float

        BoxLayout:
            id: lbus_base_box
            Label:
                id: weather_lbl_load
                text: "Loading weather..."

        ScreenManager:
            id: lbus_scrmgr
            auto_bring_to_front: False

        HiddenButton:
            size: root.width, 50
            size_hint: None, None
            pos: 0, root.height - 50
            on_press: root.next_screen()

        HiddenButton:
            size: root.width, 50
            size_hint: None, None
            pos: 0, 0
            on_press: root.next_screen(False)

<FinlandArrivalsStop>
    BoxLayout:
        orientation: "vertical"
        spacing: 10

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 50,0
            id: platform

            Label:
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: root.description
                font_size: 30

            Label:
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                font_name: "screens/finlandarrivals/resources/SFDigitalReadout-Medium.ttf"
                text: root.timedata
                font_size: 60

        # BoxLayout:
        #     orientation: "vertical"
        #     size_hint_y: 0.2
        #
        #     Label:
        #         text: "Filter"
        #         halign: "left"
        #         size_hint_y: 0.4

        BoxLayout:
            orientation: "horizontal"
            id: bx_filter
            padding: 50,0
            size_hint_y: 0.15

        BoxLayout:
            size_hint_y: 0.6
            id: bx_buses
            orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            height: 40
            size_hint_y: 0.05

            Label:
                text_size: self.size
                padding_x: 5
                halign: "left"
                font_size: 10
                text: "Data provided by Digitransit"
                size_hint_x: 0.2

            Label:
                padding_x: 5
                text_size: self.size
                halign: "right"
                valign: "middle"
                font_size: 20
                text: root.alert
                size_hint_x: 0.8


<FinlandArrivals>
    orientation: "horizontal"
    height: 30
    size_hint_y: None
    font_name: "NotoSansMono.ttf"

    Label:
        text_size: self.size
        halign: 'right'
        valign: 'middle'
        size_hint_x: 0.1
        font_name: "NotoSans-Bold.ttf"
        text: root.bus_time
        color: 1,1,0,1 # Yellow
    Label:
        size_hint_x: 0.1
        text: root.bus_route
    Label:
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        size_hint_x: 0.6
        text: root.bus_destination
    Label:
        size_hint_x: 0.2
        text: root.bus_delay
        color: 1,0,0,1 # Red

